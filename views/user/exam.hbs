<div class="container">
    <form action="/exam" method="post">
        {{#each mcqs}}
        <table class="table">
            <tr>
                
                    <label>{{this.question}}</label>
                
            </tr>
            <tr >
                <td>
                    <input type="radio" id="{{this._id}}opt1" name={{this._id}} value="{{this.option1}}"><label for="{{this._id}}opt1">{{this.option1}}</label>
                </td>
                
                 <td >
                    <input type="radio" id="{{this._id}}opt2" name={{this._id}} value="{{this.option2}}"><label for="{{this._id}}opt2">{{this.option2}}</label>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" id="{{this._id}}opt3" name={{this._id}} value="{{this.option3}}"><label for="{{this._id}}opt3">{{this.option3}}</label>
                </td>
                 <td>
                    <input type="radio" id="{{this._id}}opt4" name={{this._id}} value="{{this.option4}}"><label for="{{this._id}}opt4">{{this.option4}}</label>
                </td>
            </tr>
        </table>
        {{/each}}
        <input type="hidden" name="exam" value="{{exam}}">
        <input class="btn btn-success float-right" type="submit" onclick="submitExam('{{mcqs}}')" value="Finish Exam">
    </form>

</div>